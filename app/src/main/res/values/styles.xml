<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="LoginTextStyle">
        <item name="android:textColor">@color/white_f1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WhiteEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#90ffffff</item>
        <item name="colorControlActivated">#fff</item>
        <item name="android:textColorHint">#90ffffff</item>
        <item name="textColorError">#ff0000</item>
    </style>

    <style name="animDown" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/top_in</item>
        <item name="android:windowExitAnimation">@anim/top_out</item>
    </style>

    <style name="animZoomIn" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/alpha</item>
    </style>

</resources>
